        android:layout_height="380dp"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ebebeb"
        android:padding="@dimen/padding_padrao">

        <TextView
